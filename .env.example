# UC-1 Pro Environment Configuration Example
# Copy this to .env and fill in your values

# ========================================
# CORE CONFIGURATION
# ========================================

# Default LLM Model
DEFAULT_LLM_MODEL=Qwen/Qwen2.5-32B-Instruct-AWQ

# GPU Configuration
GPU_MEMORY_UTIL=0.95
MAX_MODEL_LEN=16384
TENSOR_PARALLEL=1

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Configuration
POSTGRES_USER=unicorn
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=unicorn_db

# Redis Configuration
REDIS_PASSWORD=

# Qdrant Configuration
QDRANT_API_KEY=

# ========================================
# API KEYS AND TOKENS
# ========================================

# vLLM API Key
VLLM_API_KEY=CHANGE_ME_SECURE_KEY

# WebUI Secret Key
WEBUI_SECRET_KEY=CHANGE_ME_SECURE_KEY

# HuggingFace Token (optional)
HF_TOKEN=

# GitHub Token for private repos (optional)
# Used for pulling Center-Deep from private repository
# Format: ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_TOKEN=

# ========================================
# MODEL CONFIGURATION
# ========================================

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# Reranker Model
RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# Whisper Model
WHISPER_MODEL=base

# Kokoro Voice
KOKORO_VOICE=af

# ========================================
# ADMIN CONFIGURATION
# ========================================

# Admin Credentials
ADMIN_USERNAME=ucadmin
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ========================================
# BACKUP CONFIGURATION
# ========================================

# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup Retention (days)
BACKUP_RETENTION_DAYS=7

# ========================================
# SEARXNG/CENTER-DEEP CONFIGURATION
# ========================================

# SearXNG Secret
SEARXNG_SECRET=CHANGE_ME_SECURE_SECRET

# Center-Deep Backend URL (internal)
SEARXNG_BACKEND_URL=http://unicorn-searxng-backend:8080

# ========================================
# OAUTH/SSO CONFIGURATION (Optional)
# ========================================

# OAuth Settings
ENABLE_OAUTH_SIGNUP=false
OAUTH_MERGE_ACCOUNTS_BY_EMAIL=true

# OpenID Connect Settings
OPENID_PROVIDER_URL=
OPENID_CLIENT_ID=
OPENID_CLIENT_SECRET=
OPENID_REDIRECT_URI=
OPENID_SCOPE=openid profile email groups
OPENID_PROVIDER_DISPLAY_NAME=UC-1 Pro SSO

# ========================================
# AUTHENTIK SSO (Optional)
# ========================================

AUTHENTIK_SECRET_KEY=
AUTHENTIK_ERROR_REPORTING_ENABLED=false
AUTHENTIK_POSTGRESQL_PASSWORD=
AUTHENTIK_POSTGRESQL_USER=authentik
AUTHENTIK_POSTGRESQL_NAME=authentik
AUTHENTIK_POSTGRESQL_HOST=authentik-postgres
AUTHENTIK_REDIS_HOST=authentik-redis

# Microsoft 365 OAuth
M365_CLIENT_ID=
M365_CLIENT_SECRET=
M365_TENANT_ID=

# Google Workspace OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ========================================
# MONITORING (Optional)
# ========================================

# Prometheus Configuration
PROMETHEUS_RETENTION_DAYS=30

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD