# --------------------------------------------------
# UC-1 Pro Environment Configuration
#
# Copy this file to .env and fill in the values.
# --------------------------------------------------

# --- PostgreSQL Database ---
# Credentials for the PostgreSQL database used by Open-WebUI
POSTGRES_USER=unicorn
POSTGRES_PASSWORD=CCCzgFZlaDb0JSL1xdPAzwGO
POSTGRES_DB=unicorn_db

# --- vLLM Configuration ---
# API key for securing the vLLM OpenAI-compatible endpoint. This is used for communication between Open-WebUI and vLLM.
VLLM_API_KEY=dummy-key-changeme

# Hugging Face Token (optional, but required for gated models or speaker diarization in WhisperX)
HF_TOKEN=

# Default LLM model to load on startup
DEFAULT_LLM_MODEL=Qwen/Qwen2.5-32B-Instruct-AWQ
LLM_QUANTIZATION=awq
MAX_MODEL_LEN=16384
GPU_MEMORY_UTIL=0.95
TENSOR_PARALLEL=1

# --- Auxiliary AI Services ---
# Model used for generating text embeddings for RAG
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# Model used for speech-to-text (e.g., tiny, base, small, medium, large-v3)
WHISPER_MODEL=base

# Default voice for Kokoro TTS
KOKORO_VOICE=af

# Model used for reranking search results
RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# --- Web UI & Security ---
# Secret key for Open-WebUI session management. Generate a long, random string for security.
WEBUI_SECRET_KEY=a_very_secret_key_changeme

# API key for Qdrant vector database (if you configure one in Qdrant's settings)
QDRANT_API_KEY=

# Secret key for the SearXNG instance. Generate a long, random string for security.
SEARXNG_SECRET=another_very_secret_key_changeme

# --- Backup Configuration ---
# Cron schedule for automated backups (default: 2 AM daily)
# Format: minute hour day month weekday
# Examples: 
#   "0 2 * * *" = Daily at 2 AM
#   "0 */6 * * *" = Every 6 hours
#   "0 2 * * 0" = Weekly on Sunday at 2 AM
BACKUP_SCHEDULE=0 2 * * *

# Number of days to retain backups (older backups are automatically deleted)
BACKUP_RETENTION_DAYS=7
